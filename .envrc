# This file is used by direnv to automatically set environment variables
# Install direnv with: brew install direnv
# Add this to your ~/.zshrc: eval "$(direnv hook zsh)"

# Use the virtualenv
source_env_if_exists ./venv/bin/activate

# Set Python path
export PYTHONPATH=$PWD
export PYTHONNOUSERSITE=1

# Print helpful message
echo "Activated ytdatahub environment with venv Python"
echo "Python: $(which python)"
